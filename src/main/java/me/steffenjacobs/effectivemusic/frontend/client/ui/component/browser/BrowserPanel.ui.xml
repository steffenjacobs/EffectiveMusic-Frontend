<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:me.steffenjacobs.effectivemusic.frontend.client.ui.component">
	<!-- import for i18n messages -->
	<ui:with
		type="me.steffenjacobs.effectivemusic.frontend.client.resource.EffectiveMusicMessages"
		field="messages" />
	<!-- import for resources bundle -->
	<ui:with
		type="me.steffenjacobs.effectivemusic.frontend.client.resource.ApplicationResources"
		field="res" />
	<ui:with
		type="me.steffenjacobs.effectivemusic.frontend.client.ui.component.playlist.EffectiveMusicResources.RES"
		field="res2" />
	<ui:style>
	.inline {
		margin-right: 10px;
		display: inline-block;
		font-size: 18px;
		vertical-align: middle;
	}
	
	.fullsize {
		position: absolute;
		top: 0px;
		left: 0px;
		bottom: 50px;
		right: 0px;
	}
	</ui:style>
	<g:HTMLPanel styleName="{style.fullsize}">
		<!-- music browser -->
		<g:HTMLPanel addStyleNames="{res2.style.contentPanel} {res2.style.backgroundColor}">
			<div style="height: 60px;">
				<g:Button
					styleName="{res.style.sendButton} {res2.style.secondColor} {style.inline}"
					text="Import" ui:field="importButtonUi" />
				<g:TextBox
					styleName="{res2.style.secondColor} {res2.style.trackTitleTextBox} {style.inline}"
					ui:field="searchBoxUi" />
			</div>
			<div style="height: 100%; position: relative;">
				<div style="height: 89%;">
					<g:ScrollPanel ui:field="contentPanelUi" width="100%"
						height="100%" />
				</div>
			</div>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 
