<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.important {
		font-weight: bold;
	}
	
	.inline {
		display: inline-block;
	}
	
	.left {
		background-color: #c2c8d6;
		height: 15px;
		border-right: 3px solid #d38850;
		max-width: 150px;
		transition: width 150ms;
	}
	
	.box {
		background-color: #9ea8be;
		border: 1px solid #4f5c70;
		height: 15px;
		width: 150px;
	}
	</ui:style>
	<g:HTMLPanel>
		<div ui:field="divBox" class="{style.box}">
			<div ui:field="divLeft" class="{style.left}"></div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 