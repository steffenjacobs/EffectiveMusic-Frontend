<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:me.steffenjacobs.effectivemusic.frontend.client.ui.component">
	<ui:with
		type="me.steffenjacobs.effectivemusic.frontend.client.resource.EffectiveMusicMessages"
		field="messages" />

	<g:HTMLPanel>
		<div style="position: relative; height: 100%; background-color: #657192">
			<div
				style="width: 80%;display:inline-block;position: relative; height: 100%">
				<div style="margin-bottom: 10px;">
					<c:controlpanel.ControlPanel ui:field="controlPanel" />
				</div>
				<div style="position: relative; height: 100%;">
					<c:browser.BrowserPanel ui:field="browserPanelUi" />
				</div>
			</div>
			<div
				style="width: 19%;display:inline-block; position: absolute; top: 0px; bottom: 0px; height: 100%;">
				<c:playlist.PlaylistPanel ui:field="playlistPanelUi" />
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 
