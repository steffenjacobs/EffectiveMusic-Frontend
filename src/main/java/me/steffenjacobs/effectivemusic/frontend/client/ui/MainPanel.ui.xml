<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:me.steffenjacobs.effectivemusic.frontend.client.ui.component">
	<ui:with
		type="me.steffenjacobs.effectivemusic.frontend.client.resource.EffectiveMusicMessages"
		field="messages" />

	<g:DockLayoutPanel>
		<!-- Top panel -->
		<g:north size="350">
			<g:HTMLPanel>
				<h1>
					<g:InlineLabel text="{messages.titleMessage}" />
				</h1>
				<!-- Main Control Panel -->
				<c:controlpanel.ControlPanel ui:field="controlPanel" />
			</g:HTMLPanel>
		</g:north>

		<g:west size="330">
			<g:FlowPanel></g:FlowPanel>
		</g:west>
		<g:center size="330">
			<g:FlowPanel>
				<g:Button ui:field="remoteFileBrowserButtonUi" text="Open"/>
			</g:FlowPanel>
		</g:center>

		<!-- Playlist  50em-->
		<g:east size="600">
			<g:ScrollPanel>
				<c:playlist.PlaylistPanel ui:field="playlistPanelUi"
					height="100%" />
			</g:ScrollPanel>
		</g:east>
	</g:DockLayoutPanel>
</ui:UiBinder> 